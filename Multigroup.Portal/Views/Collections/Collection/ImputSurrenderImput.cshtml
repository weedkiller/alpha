<!-- VISTA: Maintenance/Customer.cshtml -->
@model Multigroup.Portal.Models.Collection.AssignPaymentPreferenceFiltersVm
<div class="filter-container">
</div>

<!-- FIN TITULO-->
<div class="clearfix">
</div>
<div class="row">
    <div class="col-md-12 column">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-Customer"></i>
                    <span class="caption-subject bold uppercase">Carga Rendición Cobrador</span>
                </div>
                <div class="actions">
                    <div class="tooltipAai btn-group" id="idTooltipAai">
                        <div class="actions">
                            <div class="tooltipAai btn-group" id="idTooltipAai">
                                <a class="btn btn-default bootstro" id="btnImput" disabled="disabled" data-toggle="modal" data-target="#imputModal">
                                    Imputar Rendición
                                </a>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-actions top">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label col-md-4">Cobrador:</label>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(m => m.SelectedUser, Model.ListUser, new { @size = "2" })
                                </div>
                            </div>
                        </div>
                    </div>       
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <button id="btnBuscar" class="btn btn-default">Buscar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" id="acciones">

                    </div>
                </div>
            </div>
        </div>
        <div class="portlet portlet-sortable-empty">
        </div>
    </div>
</div>

<div id="imputModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Imputar Rendición</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <h3>¿Confirma que desea imputar la rendición?</h3>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="imputPaymentBtn">Confirmar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {



        $('#btnBuscar').click(function (event) {
            var params = new Object;
            params.Collector = $('#SelectedUser').val();
            CallBackGet(function (data) {
                $("#acciones").html(data);
            }, "/Collections/GetTableSurrenderImput", params)
        });

    });
</script>

