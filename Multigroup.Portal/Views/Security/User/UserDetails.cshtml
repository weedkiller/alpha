<!-- VISTA: User/UserDetails.cshtml -->
@model Multigroup.Portal.Models.Shared.UserVm
@using Resources
<!-- FIN TITULO-->
<div class="clearfix">
</div>
<div class="row">
    <div class="col-md-12 column">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-shield"></i>
                    <span class="caption-subject bold uppercase">Detalle Usuario</span>
                </div>
                <div class="actions">
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">Nombre:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Names, new { id = "12", @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">Apellido:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <!--/row-->
                    <!--/row-->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">E-mail:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">N de documento:</label>
                                <div class="col-md-9">
                                    @Html.TextBoxFor(model => model.IdentificationNumber, new { @class = "form-control", @readonly = "readonly" })
                                </div>
                            </div>
                        </div>                       
                    </div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label col-md-3">Rol:</label>
								<div class="col-md-9">
									@Html.DropDownListFor(m => m.SelectedRole, Model.ListRoles, new { size = "2", @disabled = "disabled" })
								</div>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<label class="control-label col-md-3">Usuario:</label>
								<div class="col-md-9">
									@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @readonly = "readonly" })
								</div>
							</div>
						</div>
						<!--/span-->
					</div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">Tipo:</label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.ddlUserType.SelectedItem, Model.ddlUserType.ListItems, new { @id = "ddlUserType", @size = 2, @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">Caja:</label>
                                <div class="col-md-9">
                                    @Html.DropDownListFor(m => m.ddlCashier.SelectedItem, Model.ddlCashier.ListItems, new { @id = "ddlCashier", @size = 2, @disabled = "disabled" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/row-->
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-md-offset-5">
                                    <button type="button" class="btn default" id="btnCancel">Volver</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                        </div>
                    </div>
                </div>
                <!-- END FORM-->
            </div>
        </div>
        <div class="portlet portlet-sortable-empty">
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCancel').click(function (event) {
            CallBackGet(function (data) {
                $("#dashboard").html(data);
            }, "/User/Index", null)
        });
        $('#SelectedRole').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true
        });
        $('#SelectedZone').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true
        });
        $('#SelectedType').multiselect({
            includeSelectAllOption: true,
            enableFiltering: true
        });
		$('#SelectedType').change(function () {
			if ($('#SelectedType').val() == '2') {
				$('#comissionDiv').show();
			} else {
				$('#comissionDiv').hide();
				$('#SelectedType').multiselect('refresh');
			}
		});
		if ($('#SelectedType').val() == '2') {
			$('#comissionDiv').show();
		} else {
			$('#comissionDiv').hide();
			$('#SelectedType').multiselect('refresh');
		}
		$('select').multiselect();

    });
</script>