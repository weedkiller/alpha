<!-- VISTA: Maintenance/SalaryAllocation.cshtml -->
@model Multigroup.Portal.Models.Administration.SalaryAllocationFilterVm
<div class="clearfix">
</div>
<div class="row">
    <div class="col-md-12 column">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-SalaryAllocation"></i>
                    <span class="caption-subject bold uppercase">Imputación de Sueldo Fijo</span>
                </div>
                <div class="actions">
                    <a class="btn btn-default" id="btnAddSalaryAllocation">Añadir</a>
                    <div class="tooltipAai btn-group" id="idTooltipAai">
                        <a class="btn btn-default bootstro" id="btnViewSalaryAllocation" disabled="disabled">
                            Ver
                        </a>
                    </div>
                    <div class="tooltipAai btn-group" id="idTooltipAai">
                        <a class="btn btn-default bootstro" id="btnEditSalaryAllocation" disabled="disabled">
                            Editar
                        </a>
                    </div>
                    <a class="btn btn-default bootstro" id="btnAuthSalaryAllocation" disabled="disabled" data-toggle="modal" data-target="#authModal">
                        Autorizar
                    </a>
                    <a class="btn btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Fecha Inicio Desde:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control form-control-inline date-picker" id="txtDateFromStart" placeholder="dd/mm/aaaa" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Fecha Inicio Hasta:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control form-control-inline date-picker" id="txtDateToStart" placeholder="dd/mm/aaaa" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Usuario Autorizador:</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.SelectedUserAuth, Model.ListUserAuth, new { @size = "2" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Fecha Fin Desde:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control form-control-inline date-picker" id="txtDateFromEnd" placeholder="dd/mm/aaaa" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Fecha Fin Hasta:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control form-control-inline date-picker" id="txtDateToEnd" placeholder="dd/mm/aaaa" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Empleado:</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.SelectedProvider, Model.ListProvider, new { @size = "2" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Monto Desde:</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.AmounFrom, new { @class = "form-control", @type = "number", @Value = "" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Monto Hasta:</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.AmountTo, new { @class = "form-control", @type = "number", @Value = "" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-4">Autorizado:</label>
                            <div class="col-md-8" id="sandbox-container">
                                @*<input type="checkbox" id="changePassword"/>*@
                                @Html.CheckBoxFor(model => model.Authorized, new { @id = "isAuthorized", @checked = true })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">                    
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="col-md-12">
                                <button id="btnBuscar" class="btn btn-default">Buscar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12" id="acciones">

                    </div>
                </div>
            </div>
        </div>
        <div class="portlet portlet-sortable-empty">
        </div>
    </div>
</div>
<div class="modal fade" role="dialog" id="modalViewSalaryAllocation">

</div>
<div id="authModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Autorizar Imputación de Sueldo</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <h3>¿Confirma que desea autorizar la Imputación de Sueldo?</h3>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="authSalaryAllocationModalBtn">Confirmar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
<!-- Note the missing multiple attribute! -->
<script type="text/javascript">
    $(document).ready(function () {

        var errorAuth = @ViewBag.ErrorMessageAuth
        $('#isAuthorized').iCheck({
            checkboxClass: 'icheckbox_square-grey',
            radioClass: 'iradio_square-grey',
            increaseArea: '20%' // optional
        });

        if (errorAuth == true) {
            Command: toastr["error"]("Usted no es el autorizante de esta Imputación de Sueldo")
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-center",
                "preventDuplicates": true,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
        }


        $('.date-picker').datepicker();
        $('select').multiselect({
            includeSelectAllOption: true,
            enableFiltering: false,
        });
        $('.tooltipAai').tooltip({
            container: 'body',
            title: "Seleccione un gasto"
        });
        $('.tooltipSalaryAllocation1').tooltip({
            container: 'body',
            title: 'Seleccione un gasto'
        });
        $('#btnViewSalaryAllocation').click(function (event) {
            CallBackGet(function (data) {
                $("#dashboard").html(data);
            }, "/SalaryAllocation/View?id=" + id, null)
        });
        $('#btnEditSalaryAllocation').click(function (event) {
            CallBackGet(function (data) {
                $("#dashboard").html(data);
            }, "/SalaryAllocation/Edit?id=" + id, null)
        });

        $('#authSalaryAllocationModalBtn').click(function (event) {
            CallBackGet(function (data) {
                $("#dashboard").html(data);
            }, "/SalaryAllocation/ConfirmSalary?id=" + id, null)
        });

        $('#btnAddSalaryAllocation').click(function (event) {
            CallBackGet(function (data) {
                $("#dashboard").html(data);
            }, "/SalaryAllocation/Create", null)
        });



        $('#btnBuscar').click(function (event) {
            var params = {};
            params.SelectedProvider = $('#SelectedProvider').val();
            params.SelectedAuthorized = $('#SelectedUserAuth').val();
            params.AmountFrom = $('#AmounFrom').val();
            params.AmountTo = $('#AmountTo').val();
            params.DateFromStart = $('#txtDateFromStart').val();
            params.DateToStart = $('#txtDateToStart').val();
            params.DateFromEnd = $('#txtDateFromEnd').val();
            params.DateToEnd = $('#txtDateToEnd').val();
            if ($('#isAuthorized').is(':checked') == true) {
                params.isAuthorized = '1';
            } else {
                params.isAuthorized = '0';
            }
            CallBackGet(function (data) {
                $("#acciones").html(data);
            }, "/SalaryAllocation/GetTable", params)
        });

    });
</script>

