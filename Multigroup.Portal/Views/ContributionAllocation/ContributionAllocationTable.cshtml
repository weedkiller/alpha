@model Multigroup.Portal.Models.Administration.ContributionAllocationTableVm

<div class="form-group">
    <table id="tabla_id" class="display table table-bordered table-striped table-condensed flip-content" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
        <thead>
            <tr>
                <th style="display: none">Número</th>
                <th>Fecha</th>
                <th>Concepto</th>
                <th>Monto</th>
                <th>Fecha Sistema</th>/th>
                <th>Usuario</th>              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ContributionAllocationList)
            {
            <tr>
                <td style="display: none">@Html.DisplayFor(modelItem => item.ContributionAllocationId)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Concept)</td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.SystemDate)</td>
                <td>@Html.DisplayFor(modelItem => item.User)</td>
            </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        function formatTableToolsButton(node) {
            $(node).removeClass('DTTT_button');
            $(node).addClass('btn btn-default');
        }
        var table = $('#tabla_id').dataTable({
            "destroy": true,
            "aaSorting": [],
            "bServerSide": false,
            "lengthMenu": [[10, 50, 200, 500, -1], [10, 50, 200, 500, "Todos"]],
            "dom": 'Blfrtip',
            "buttons": [
                { extend: 'copy', text: 'Copiar' },
                'csv',
                'excel',
                'pdf',
                { extend: 'print', text: 'Imprimir' },
            ],
            "sScrollYInner": "100%",
            "sScrollX": "100%",
            "sScrollXInner": "100%",
            "scrollCollapse": true,
            "bProcessing": false
        });

        $('#tabla_id tbody').unbind("click").on('click', 'tr', function (event) {
            event.stopPropagation();
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
                $("#btnVer").attr("disabled", "disabled");
                $("#idTooltipContributionAllocation1").removeClass('tooltipAai');
                $('#idTooltipContributionAllocation1').tooltip({
                    container: 'body',
                    title: 'Seleccione un empleado'
                });
                $("#btnViewContributionAllocation").attr("disabled", "disabled");
                $("#btnEditContributionAllocation").attr("disabled", "disabled");
                $("#idTooltipAai").removeClass('tooltipAai');
                $('#idTooltipAai').tooltip({
                    container: 'body',
                    title: "Seleccione un empleado"
                });
            }
            else {
                $('#tabla_id tr.selected').removeClass('selected');
                $(this).addClass('selected');
                $("#btnViewContributionAllocation").removeAttr("disabled", "disabled");
                $("#btnEditContributionAllocation").removeAttr("disabled", "disabled");
                $("#idTooltipAai").tooltip('destroy');
                $("#btnVer").removeAttr("disabled", "disabled");
                $("#idTooltipContributionAllocation1").tooltip('destroy');
                id = table.fnGetData(this)[0];
            }
        });
    });
</script>