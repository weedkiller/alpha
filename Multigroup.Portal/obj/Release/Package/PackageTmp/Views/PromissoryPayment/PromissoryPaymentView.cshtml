@model Multigroup.Portal.Models.Administration.PromissoryPaymentVm
<div class="filter-container">
</div>

<div class="clearfix">
</div>
<div class="row">
    <div class="col-md-12 column">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-laptop"></i>
                    <span class="caption-subject bold uppercase">Ver Cobro Pagaré</span>
                </div>
                <div class="actions">
                    <a class="btn btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title="">
                    </a>
                </div>
            </div>
        @using (Ajax.BeginForm("Create", "IngresarTrabajo", new AjaxOptions
                                {
                                    HttpMethod = "POST",
                                    OnBegin = "OnStartIngresoTrabajo",
                                    OnComplete = "OnComplete",
                                    OnFailure = "FailMessage",
                                    OnSuccess = "SuccessMessageIngresoTrabajo",
                                    UpdateTargetId = "dashboard"
                                }))
                                {
            @Html.AntiForgeryToken()
        <div class="portlet-body form">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-3">Fecha Pago:</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.PaymentDate, new { @class = "form-control form-control-inline date-picker", @type = "text", @placeholder = "dd/mm/aaaa", @readonly = true })
                            @Html.ValidationMessageFor(model => model.PaymentDate, string.Empty, new { @class = "validate-error" })
                        </div>
                    </div>
                </div>
                <!--/span-->
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-3">Cliente:</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.ddlClient.SelectedItem, Model.ddlClient.ListItems, new { @id = "ddlClient", @size = 2, @readonly = true })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <!-- BEGIN Portlet PORTLET-->
                    <div class="portlet box blue-dark">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-calculator"></i>Pagarés
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div id="articlesTableDiv" style="position: relative; overflow: hidden; width: auto; min-height: 200px;">
                                <table id="articlesTable" class="display table table-bordered table-striped table-condensed flip-content" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                                    <thead>
                                        <tr>
                                            <th style="display: none">Id</th>
                                            <th>Descripción</th>
                                            <th>Fecha Vencimiento</th>
                                            <th>Monto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.PromissoriesAll)
                                        {
                                        <tr>
                                            <td style="display: none">@item.PromissoryId</td>
                                            <td>@item.Description</td>
                                            <td>@item.CollectionDate</td>
                                            <td>@item.Amount</td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- END Portlet PORTLET-->
                </div>
            </div>
            <br />
            <div class="row" id="divPM">
                <div class="col-md-6">
                    <!-- BEGIN Portlet PORTLET-->
                    <div class="portlet box blue-dark">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-calculator"></i>Forma de Pago
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div id="PaymentTableDiv" style="position: relative; overflow: hidden; width: auto; min-height: 200px;">
                                <table id="articlesTable" class="display table table-bordered table-striped table-condensed flip-content" style="overflow: hidden; white-space: nowrap; text-overflow: ellipsis;">
                                    <thead>
                                        <tr>
                                            <th style="display: none">Id</th>
                                            <th>Forma de Pago</th>
                                            <th>Monto</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.PaymentMethods)
                                        {
                                            <tr>
                                                <td style="display: none">@item.PaymentMethodId</td>
                                                <td>@item.PaymentMethod</td>
                                                <td>@item.Amount</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- END Portlet PORTLET-->
                </div>
            </div>           
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label col-md-4">Total:</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @type = "number", @readonly = "readonly " })
                            @Html.ValidationMessageFor(model => model.Amount, string.Empty, new { @class = "validate-error" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-5">
                        <a class="btn btn-primary" id="btnVolver">Volver</a>
                    </div>
                </div>
            </div>
        </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {


        $("#PaymentDate").datepicker();
        $('select').multiselect();      

        $('#btnVolver').click(function (event) {
            CallBackGet(function (data) {
                $("#dashboard").html(data);
            }, "/PromissoryPayment/Index", null)
        });

    });
</script>
