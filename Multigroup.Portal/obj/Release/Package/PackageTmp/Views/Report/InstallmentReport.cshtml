<!-- VISTA: Maintenance/Customer.cshtml -->
@model Multigroup.Portal.Models.Maintenance.PortfolioCustomerFilterVm
<div class="filter-container">
</div>


<!-- FIN TITULO-->
<div class="clearfix">
</div>
<div class="row">
	<div class="col-md-12 column">
		<div class="portlet light bordered">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-Customer"></i>
					<span class="caption-subject bold uppercase">Reporte Por Cuota</span>
				</div>
                <div class="actions">
                </div>
			</div>
			<div class="portlet-body form">				
                <div class="form-actions top">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-4">Cuota:</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Installment, new { @class = "form-control", @type = "number" })
                                </div>
                            </div>
                        </div>                       
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <button id="btnBuscar" class="btn btn-default">Buscar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
				<div class="row">
					<div class="col-md-12" id="acciones">

					</div>
				</div>
			</div>
		</div>
		<div class="portlet portlet-sortable-empty">
		</div>
	</div>
</div>
<!-- Note the missing multiple attribute! -->
<div>
    <script type="text/javascript">
        $(document).ready(function () {
                $('select').multiselect({
                    includeSelectAllOption: true,
                    enableFiltering: false,
                });
                             

                $('.tooltipAai').tooltip({
                    container: 'body',
                    title: "Seleccione un cliente"
                });
                $('.tooltipCustomer1').tooltip({
                    container: 'body',
                    title: 'Seleccione un cliente'
                });
               

                $('#btnBuscar').click(function (event) {
                    var params = {};
                    params.Installment = $('#Installment').val();
                    CallBackGet(function (data) {
                        $("#acciones").html(data);
                    }, "/Report/GetTableInstallment", params)
                });               

            });
    </script>
</div>

